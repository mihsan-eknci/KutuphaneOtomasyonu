<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="487.0" prefWidth="357.0" stylesheets="@../css/add-book.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kutupproje2.AddBookController">
    <children>
        <Label layoutX="65.0" layoutY="20.0" text="YENİ KİTAP EKLE" />
        <VBox layoutX="23.0" layoutY="80.0" prefHeight="368.0" prefWidth="311.0" spacing="10.0">
            <children>
                <TextField fx:id="textfieldBookName" prefHeight="35.0" prefWidth="311.0" promptText="Kitap İsmi">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
                <TextField fx:id="textfieldAuthor" prefHeight="35.0" prefWidth="311.0" promptText="Yazarı">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></TextField>
                <TextField fx:id="textfieldPublisher" prefHeight="35.0" prefWidth="311.0" promptText="Yayınevi">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></TextField>
                <TextField fx:id="textfieldPublicationYear" prefHeight="35.0" promptText="Basım Yılı">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></TextField>
                <TextField fx:id="textfieldPageCount" prefHeight="35.0" prefWidth="264.0" promptText="Sayfa Sayısı">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></TextField>
                <TextField fx:id="textfieldGenre" prefHeight="35.0" promptText="Tür">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></TextField>
                <Button fx:id="addButton" onAction="#onAddBookButtonClick" prefHeight="37.0" prefWidth="126.0" text="Kitap Ekle">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="110.0" right="100.0" />
               </VBox.margin></Button>
            </children>
        </VBox>
      <ImageView fitHeight="49.0" fitWidth="49.0" layoutX="23.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/kitap_ekle-removebg-preview.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
